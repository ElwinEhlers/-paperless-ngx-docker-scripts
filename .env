PAPERLESS_REDIS=redis://redis:6379
PAPERLESS_DBHOST=db
PAPERLESS_DBNAME=paperless
PAPERLESS_DBUSER=paperless
PAPERLESS_DBPASS=securepassword

# Sichere Werte setzen:
PAPERLESS_SECRET_KEY=einSehrSichererZufälligerStringMitGenügendLänge

# OCR Sprache(n) – z. B. Deutsch und Englisch
PAPERLESS_OCR_LANGUAGE=deu
PAPERLESS_OCR_LANGUAGES=eng deu

# Zeitzone
PAPERLESS_TIME_ZONE=Europe/Berlin

# Falls du möchtest, automatisch einen Admin user anlegen:
# PAPERLESS_ADMIN_USER=admin
# PAPERLESS_ADMIN_PASSWORD=MeinAdminPasswort
# PAPERLESS_ADMIN_EMAIL=admin@domain.example
PAPERLESS_CONSUMER_RENAME_FILE: false
